             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XorApp.MainPage">

    <StackLayout Margin="5">
        <StackLayout Orientation="Horizontal">
            <Label Text="X1" />
            <Editor x:Name="X1" />
        </StackLayout>
        <Label Text="+"/>
        <StackLayout Orientation="Horizontal">
            <Label Text="X2" />
            <Editor x:Name="X2" />
        </StackLayout>
        <Label Text="="/>
        <Label x:Name="XorResult"/>
        <Button x:Name="PredictButton" Text="Predict" Clicked="PredictButton_Clicked"/>
    </StackLayout>
    
</ContentPage>
